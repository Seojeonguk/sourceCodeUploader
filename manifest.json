{
  "manifest_version": 3,
  "name": "Source Code Uploader",
  "version": "0.0.1",
  "description": "A extension enabling seamless uploading of source code to platforms.",
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "action": {
    "default_title": "Source Code Uploader",
    "default_popup": "popup/html/index.html"
  },
  "author": {
    "email": "junguk7880@naver.com"
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.acmicpc.net/*"],
      "css": ["scripts/boj/boj.css"],
      "js": [
        "library/jquery-3.6.2.min.js",
        "scripts/boj/constants.js",
        "scripts/boj/buttonUtils.js",
        "scripts/boj/parsing.js",
        "scripts/boj/Boj.js"
      ],
      "run_at": "document_idle",
      "include_globs": ["*/source/*", "*/status*"]
    },
    {
      "matches": ["https://github.com/*"],
      "js": ["scripts/github/githubEvents.js"],
      "run_at": "document_idle"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "host_permissions": [
    "https://api.notion.com/*",
    "https://github.com/*",
    "https://www.acmicpc.net/*",
    "https://solved.ac/*"
  ],
  "permissions": [
    "activeTab",
    "declarativeNetRequest",
    "scripting",
    "storage",
    "nativeMessaging"
  ],
  "short_name": "SCU",
  "web_accessible_resources": [
    {
      "resources": ["icon/*.png"],
      "matches": ["https://www.acmicpc.net/*"]
    },
    {
      "resources": ["scripts/util.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
